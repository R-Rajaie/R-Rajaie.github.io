---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Footer from "../components/Footer.astro";
import { projects } from "../data/projects";
---
<BaseLayout title="Your Name · Data Analyst" description="Projects, notes, and contact.">
  <Nav />
  <Hero />

  <section class="section">
    <div class="container">
      <h2 style="margin:0 0 10px">Featured Projects</h2>
      <p class="muted" style="margin:0 0 18px">Case‑study style reports you can skim fast.</p>
      <div class="grid projects-grid">
        {projects.map(p => <ProjectCard project={p} />)}
      </div>
    </div>
  </section>

  <section id="writing" class="section">
    <div class="container">
      <h2 style="margin:0 0 12px">Writing</h2>
      <p class="muted" style="margin:0 0 18px">Personal posts live on Medium; technical deep dives show up here.</p>
      <div class="card" style="display:flex; align-items:center; justify-content:space-between; gap:16px;">
        <div>
          <div style="font-weight:700;">Medium</div>
          <div class="muted">Thoughts on learning, career, and design.</div>
        </div>
        <a class="btn" href="https://medium.com/@yourhandle" target="_blank" rel="noopener">Read on Medium →</a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>