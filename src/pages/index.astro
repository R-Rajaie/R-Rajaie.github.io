---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Footer from "../components/Footer.astro";
import { projects } from "../data/projects";
---

<BaseLayout title="Ryan Rajaie · Data Scientist" description="Projects, writing, and contact.">
  <Nav />

  <main id="home">
    <Hero />

    <!-- Projects -->
    <section id="projects" class="section">
      <div class="container">
        <h2 style="margin:0 0 10px">Projects</h2>
        <p class="muted" style="margin:0 0 18px">Click a card to view a full report page.</p>
        <div class="grid projects-grid">
          {projects.map((p) => <ProjectCard project={p} />)}
        </div>
      </div>
    </section>

    <!-- About -->
    <section id="about" class="section">
      <div class="container">
        <h2 style="margin:0 0 12px">About</h2>

        <div class="subhead">Professional Experience</div>
        <div class="stack">
          <article class="card no-hover">
            <h3 style="margin:0 0 6px;">Autonomy Intern — Startup XYZ</h3>
            <div class="muted">2024 • San Jose, CA</div>
            <p style="margin:10px 0 0;">
              blah balh blah job
            </p>
            <ul style="margin:10px 0 0 18px;">
              <li>line 1</li>
              <li>line 2</li>
              <li>line 3</li>
            </ul>
          </article>

          <article class="card no-hover">
            <h3 style="margin:0 0 6px;">Lead Lifeguard</h3>
            <div class="muted">2022 – Present • freakmont</div>
            <p style="margin:10px 0 0;">
              big chungus
            </p>
          </article>
        </div>

        <div class="subhead" style="margin-top:22px;">Education</div>
        <div class="stack">
          <article class="card no-hover">
            <h3 style="margin:0 0 6px;">B.S. Data Science — San José State University</h3>
            <div class="muted">Expected 2026</div>
            <p style="margin:10px 0 0;">
              blah blah blah
            </p>
          </article>
        </div>
      </div>
    </section>

    <!-- Blog (Medium link) -->
    <section id="blog" class="section">
      <div class="container">
        <h2 style="margin:0 0 12px">Blog</h2>
        <p class="muted" style="margin:0 0 18px">Personal posts on Medium</p>
        <div class="card" style="display:flex; align-items:center; justify-content:space-between; gap:16px;">
          <div>
            <div style="font-weight:700;">Medium</div>
            <div class="muted">my blog (link broken) now</div>
          </div>
          <a class="btn" href="https://medium.com/@yourhandle" target="_blank" rel="noopener">Read on Medium →</a>
        </div>
      </div>
    </section>
  </main>

  <!-- Contact footer at the very bottom -->
  <Footer />
</BaseLayout>
