---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---
<BaseLayout title="About · Your Name">
  <Nav />
  <section class="section">
    <div class="container">
      <h1 style="margin:0 0 16px">About</h1>
      <p class="muted" style="margin:0 0 18px; max-width:70ch;">
        Data science student focused on decision‑support analytics, clean pipelines, and sharp visuals.
      </p>
      <div class="columns">
        <div class="card">
          <h3 style="margin-top:0">Experience</h3>
          <ul>
            <li><strong>Data Analyst Intern</strong> — Startup XYZ (2024) <br/><span class="muted">Built ETL for product analytics; automated weekly reporting.</span></li>
            <li><strong>Lead Lifeguard & Trainer</strong> — Waterpark (2022–)</li>
          </ul>
        </div>
        <div class="card">
          <h3 style="margin-top:0">Skills</h3>
          <div>
            <span class="tag">Python</span>
            <span class="tag">Pandas</span>
            <span class="tag">SQL</span>
            <span class="tag">Matplotlib</span>
            <span class="tag">ETL</span>
            <span class="tag">Dashboards</span>
          </div>
        </div>
        <div class="card">
          <h3 style="margin-top:0">Education</h3>
          <p><strong>B.S. Data Science</strong> — SJSU (2026 expected)</p>
        </div>
      </div>
    </div>
  </section>
  <Footer />
</BaseLayout>